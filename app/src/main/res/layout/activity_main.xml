<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/main_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.qiwenge.android.ui.SlowViewPager
                android:id="@+id/viewpager_main"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bottom_menu_shadow"
                android:contentDescription="@string/str_empty" />
        </RelativeLayout>

        <GridView
            android:id="@+id/gv_menu"
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:listSelector="@drawable/item_common_bg"
            android:numColumns="3"></GridView>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_layer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="0.2"
        android:background="@color/action_bar_bg_color"
        android:visibility="gone" />

</RelativeLayout>