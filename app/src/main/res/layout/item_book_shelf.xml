<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_iv_cover"
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:background="@drawable/cover_border"
            android:contentDescription="@string/str_empty"
            android:padding="1px"
            android:layout_centerInParent="true"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/item_iv_select"
            android:visibility="gone"
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:background="@drawable/icon_place_holder"
            android:contentDescription="@string/str_empty"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/item_tv_title"
            style="@style/ItemTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="老五"
            android:textSize="@dimen/font_size_middle"
            android:textColor="@color/tv_title_color" />

        <TextView
            android:id="@+id/item_tv_author"
            style="@style/ItemSummary"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="老五"
            android:textSize="@dimen/font_size_12"
            android:textColor="@color/tv_desc_color" />

        <TextView
            android:id="@+id/item_tv_desc"
            style="@style/ItemSummary"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="@dimen/font_size_12"
            android:text="老五老五老五老五老五老五老五老五老五老五老五老五老五老五老五老五老五老五老五老五老五"
            android:textColor="@color/tv_desc_color" />
    </LinearLayout>

</LinearLayout>